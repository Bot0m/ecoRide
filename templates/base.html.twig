<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="flex flex-col min-h-screen bg-background text-textPrimary font-[Quicksand]">

        {% include 'partials/_header.html.twig' %}
        {% include 'partials/_success_popup.html.twig' %}

        <main class="flex-grow {% if app.request.get('_route') not in ['homepage', 'app_login', 'app_rides', 'app_register','credit','user_base'] %}pt-20{% endif %}">
            {% block body %}{% endblock %}
        </main>

        {% include 'partials/_footer.html.twig' %}
        {% include 'partials/_contact_drawer.html.twig' %}
        <script src="{{ asset('build/flowbite.min.js') }}"></script>
    </body>
</html>