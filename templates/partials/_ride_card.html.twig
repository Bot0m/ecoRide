<div class="bg-white/20 backdrop-blur-sm rounded-xl p-4 md:p-6 border border-white/30 hover:border-accent/50 transition-all duration-300">
    <!-- En-t√™te responsive -->
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-4">
        <!-- Contenu principal -->
        <div class="flex-1 min-w-0">
            <!-- Titre et badge √©cologique -->
            <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-3 mb-4">
                <h3 class="text-base sm:text-lg font-title text-textPrimary break-words">{{ ride.departure }} ‚Üí {{ ride.arrival }}</h3>
                                                            {% if ride.isEcological %}
                                                <span class="bg-green-500/20 text-textSecondary text-xs px-2 py-1 rounded-full font-base border border-green-400/30 w-fit">
                                                    üå± √âCO
                                                </span>
                                            {% endif %}
            </div>
            
            <!-- Grille d'informations responsive -->
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 text-sm mb-4">
                <div>
                    <span class="text-textSecondary block">Date</span>
                    <p class="text-textPrimary font-base">{{ ride.date|date('d/m/Y') }}</p>
                </div>
                <div>
                    <span class="text-textSecondary block">D√©part</span>
                    <p class="text-textPrimary font-base">{{ ride.departureTime|date('H:i') }}</p>
                </div>
                <div>
                    <span class="text-textSecondary block">Arriv√©e</span>
                    <p class="text-textPrimary font-base">{{ ride.arrivalTime|date('H:i') }}</p>
                </div>
                <div>
                    <span class="text-textSecondary block">Prix</span>
                    <p class="text-textPrimary font-base">{{ ride.price }} cr√©dits</p>
                </div>
            </div>
            
            <!-- Informations secondaires responsive -->
            <div class="flex flex-wrap gap-2 sm:gap-4 text-sm">
                <div class="flex items-center gap-2 min-w-0">
                    <svg class="w-4 h-4 text-textSecondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    <span class="text-textSecondary truncate">{{ ride.driver.pseudo }}</span>
                </div>
                <div class="flex items-center gap-2 min-w-0">
                    <svg class="w-4 h-4 text-textSecondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"/>
                        <circle cx="7" cy="17" r="2"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17h6"/>
                        <circle cx="17" cy="17" r="2"/>
                    </svg>
                    <span class="text-textSecondary truncate">{{ ride.vehicle.brand }} {{ ride.vehicle.model }}</span>
                </div>
                <div class="flex items-center gap-2 min-w-0">
                    <svg class="w-4 h-4 text-textSecondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    <span class="text-textSecondary">{{ ride.availableSeats }} place{{ ride.availableSeats > 1 ? 's' : '' }}</span>
                </div>
            </div>
            
        </div>
        
        <!-- Boutons d'action responsive -->
        <div class="flex-shrink-0 w-full lg:w-auto">
            <div class="flex flex-col items-end gap-2">
                {% if app.user and ride.driver != app.user %}
                    {% set userParticipationStatus = userParticipations[ride.id] ?? null %}
                    {% if userParticipationStatus == 'en_attente' %}
                        <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg flex items-center justify-center gap-2 text-sm lg:text-base w-full lg:w-auto ring-2 ring-accentDark">
                            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="whitespace-nowrap">En attente</span>
                        </span>
                    {% elseif userParticipationStatus == 'acceptee' %}
                        {% if ride.status == 'en_cours' %}
                            <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg flex items-center justify-center gap-2 text-sm lg:text-base w-full lg:w-auto ring-2 ring-accent">
                                <span class="whitespace-nowrap">En cours</span>
                            </span>
                        {% elseif ride.status == 'termine' %}
                            <span class="bg-gray-500 bg-opacity-20 text-gray-400 font-base px-4 lg:px-6 py-2 rounded-lg flex items-center justify-center gap-2 text-sm lg:text-base w-full lg:w-auto">
                                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="whitespace-nowrap">Termin√©</span>
                            </span>
                            {% if showTodayActions is defined and showTodayActions %}
                                <a href="#" class="bg-accent hover:bg-accentDark text-textSecondary hover:text-textPrimary font-base px-4 lg:px-6 py-2 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto">
                                    Laisser un avis
                                </a>
                            {% endif %}
                        {% else %}
                            <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg flex items-center justify-center gap-2 text-sm lg:text-base w-full lg:w-auto ring-2 ring-accent">
                                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span class="whitespace-nowrap">R√©serv√©</span>
                            </span>
                        {% endif %}
                    {% elseif userParticipationStatus == 'refusee' %}
                        <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg flex items-center justify-center gap-2 text-sm lg:text-base w-full lg:w-auto ring-2 ring-red-500">
                            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                            <span class="whitespace-nowrap">Refus√©e</span>
                        </span>
                    {% else %}
                        {% if ride.availableSeats > 0 %}
                            <button onclick="reserveRide({{ ride.id }})" 
                                data-ride-departure="{{ ride.departure }}"
                                data-ride-arrival="{{ ride.arrival }}"
                                data-ride-date="{{ ride.date|date('d/m/Y') }}"
                                data-ride-time="{{ ride.departureTime|date('H:i') }}"
                                data-ride-price="{{ ride.price }}"
                                data-ride-available-seats="{{ ride.availableSeats }}"
                                class="bg-accent hover:bg-accentDark text-textSecondary hover:text-textPrimary font-base px-4 lg:px-6 py-2 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto">
                                R√©server
                            </button>
                        {% else %}
                            <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg text-sm lg:text-base w-full lg:w-auto text-center ring-2 ring-backgroundDark">
                                Complet
                            </span>
                        {% endif %}
                    {% endif %}
                {% elseif ride.driver == app.user %}
                    {% if showTodayActions is defined and showTodayActions %}
                        {% if ride.status == 'actif' %}
                            <button onclick="startRide({{ ride.id }})" class="bg-accent hover:bg-accentDark text-textSecondary hover:text-textPrimary font-base px-4 lg:px-6 py-2 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto">
                                D√©marrer
                            </button>
                        {% elseif ride.status == 'en_cours' %}
                            <button onclick="completeRide({{ ride.id }})" class="bg-accent hover:bg-accentDark text-textSecondary hover:text-textPrimary font-base px-4 lg:px-6 py-2 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto">
                                Terminer
                            </button>
                        {% elseif ride.status == 'termine' %}
                            <a href="#" class="bg-accent hover:bg-accentDark text-textSecondary hover:text-textPrimary font-base px-4 lg:px-6 py-2 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto">
                                Laisser un avis
                            </a>
                        {% else %}
                            <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg text-sm lg:text-base w-full lg:w-auto text-center">
                                Votre trajet
                            </span>
                        {% endif %}
                    {% else %}
                        <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg text-sm lg:text-base w-full lg:w-auto text-center">
                            Votre trajet
                        </span>
                    {% endif %}
                {% else %}
                    {% if ride.availableSeats > 0 %}
                        <a href="{{ path('app_login') }}" class="bg-accent hover:bg-accentDark text-textSecondary hover:text-textPrimary font-base px-4 lg:px-6 py-2 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto text-center block">
                            Se connecter
                        </a>
                    {% else %}
                        <span class="bg-accent bg-opacity-20 text-textSecondary font-base px-4 lg:px-6 py-2 rounded-lg text-sm lg:text-base w-full lg:w-auto text-center ring-2 ring-backgroundDark">
                            Complet
                        </span>
                    {% endif %}
                {% endif %}
                
                <!-- Lien "En savoir plus" -->
                <button onclick="openRideDetailsModal({{ ride.id }})" class="inline-flex items-center text-accent hover:text-accentDark font-base transition-colors duration-300 text-sm">
                    En savoir plus
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </button>
                

            </div>
        </div>
    </div>
</div> 