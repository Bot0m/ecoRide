<!-- Popup de succès -->
{% for message in app.flashes('success') %}
    <div class="success-popup fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
        <div class="backdrop-blur-xl backdrop-saturate-150 backdrop-contrast-125 bg-white/30 rounded-2xl shadow-2xl border border-white/30 p-6 max-w-md mx-4 transform transition-all">
            <div class="text-center">
                <h3 class="text-xl font-bold text-backgroundDark mb-2">Message envoyé !</h3>
            </div>
        </div>
    </div>
    <script>
        function closeSuccessPopup() {
            const popup = document.querySelector('.success-popup');
            if (popup) {
                popup.style.opacity = '0';
                popup.style.transition = 'opacity 0.3s ease-out';
                setTimeout(() => popup.remove(), 300);
            }
        }
        
        // Auto-fermeture après 5 secondes
        setTimeout(function() {
            closeSuccessPopup();
        }, 5000);
    </script>
{% endfor %} 