<!-- Popup de succès -->
{% for message in app.flashes('success') %}
    <div class="success-popup fixed top-1/3 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 bg-secondary text-textPrimary px-6 py-4 rounded-lg shadow-xl max-w-sm">
        <div class="flex items-center">
            <span class="font-medium mr-3">{{ message }}</span>
            <button onclick="this.parentElement.parentElement.remove()" 
                    class="text-textPrimary hover:text-textSecondary transition-colors">
                ×
            </button>
        </div>
    </div>
    <script>
        setTimeout(function() {
            const popup = document.querySelector('.success-popup');
            if (popup) {
                popup.style.transform = 'translate(-50%, -50%) scale(0.8)';
                popup.style.opacity = '0';
                popup.style.transition = 'all 0.3s ease-out';
                setTimeout(() => popup.remove(), 300);
            }
        }, 3000);
    </script>
{% endfor %} 